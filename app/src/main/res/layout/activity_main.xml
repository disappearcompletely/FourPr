<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.mirea.practice_four.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

    <Button
        android:id="@+id/buttonCameraView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:onClick="viewCamera"
        android:text="@string/cam_text"
        android:textColor="@color/white"
        android:backgroundTint="@color/gold">
    </Button>

    <Button
        android:id="@+id/buttonNotifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="createNotification"
        android:text="@string/notif_text"
        android:textColor="@color/white"
        android:backgroundTint="@color/bagr">
    </Button>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>